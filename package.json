{
  "name": "@krudi/typescript-config",
  "description": "Shared TypeScript configuration for projects to provide consistent compiler settings.",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/krudi/typescript-config/LICENSE"
    }
  ],
  "version": "0.1.0",
  "authors": [
    {
      "name": "krudi",
      "email": "patryk.kudlik@gmail.com",
