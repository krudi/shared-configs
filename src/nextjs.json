{
    "compilerOptions": {
        "target": "ES2022",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "strict": true,
        "checkJs": false,
        "allowJs": false,
        "noUncheckedIndexedAccess": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "incremental": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "plugins": [
            {
                "name": "next"
            }
        ]
    }
}
