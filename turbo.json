{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "dev": {
            "persistent": true,
            "cache": false
        },
        "clean": {
            "cache": false
        },
        "typecheck": {
            "dependsOn": ["^typecheck"],
            "inputs": ["$TURBO_DEFAULT$", "**/*.ts", "**/*.tsx", "tsconfig*.json"],
            "outputs": []
        },
        "lint:eslint": {
            "outputs": [".cache/.eslintcache"],
            "outputLogs": "new-only"
        },
        "lint:eslint:fix": {
            "cache": false
        },
        "lint:prettier": {
            "outputs": [".cache/.prettiercache"],
            "outputLogs": "new-only"
        },
        "lint:prettier:fix": {
            "cache": false
        }
    }
}
