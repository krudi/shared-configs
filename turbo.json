{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "dev": {
            "persistent": true,
            "cache": false
        },
        "clean": {
            "cache": false
        },
        "typecheck": {
            "dependsOn": ["^typecheck"],
            "inputs": [
                "$TURBO_DEFAULT$",
                "**/*.ts",
                "**/*.tsx",
                "tsconfig*.json"
            ],
            "outputs": []
        },
        "lint:eslint": {
            "outputs": []
        },
        "lint:eslint:fix": {
            "cache": false
        }
    }
}
