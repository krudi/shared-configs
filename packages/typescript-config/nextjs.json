{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@krudi/typescript-config/base.json",
    "compilerOptions": {
        "lib": ["ES2022", "dom", "dom.iterable"],
        "jsx": "preserve",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "include": [
            "next-env.d.ts",
            "**/*.ts",
            "**/*.tsx",
            ".next/types/**/*.ts"
        ],
        "exclude": ["node_modules"]
    }
}
