{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "@krudi/prettier-config",
    "version": "0.1.8",
    "private": false,
    "description": "Reusable Prettier configuration to enforce consistent formatting across projects.",
    "keywords": [
        "utils",
        "helpers",
        "validation",
        "zod",
        "types",
        "shared",
        "functions"
    ],
    "homepage": "https://github.com/krudi/prettier-config/core#readme",
    "bugs": {
        "url": "https://github.com/krudi/prettier-config/core/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/krudi/shared-configs.git"
    },
    "license": "MIT",
    "author": {
        "name": "krudi",
        "email": "patryk.kudlik@gmail.com",
        "url": "https://github.com/krudi"
    },
    "sideEffects": false,
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        },
        "./base": {
            "types": "./dist/base.d.ts",
            "import": "./dist/base.js",
            "require": "./dist/base.cjs"
        }
    },
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsc -b tsconfig.build.json",
        "dev": "tsc -p tsconfig.json --watch",
        "lint:eslint": "eslint . --cache --cache-location .cache/.eslintcache",
        "lint:eslint:fix": "eslint . --fix --cache-location .cache/.eslintcache",
        "lint:prettier": "prettier --check . --cache --cache-strategy metadata --cache-location .cache/.prettiercache",
        "lint:prettier:fix": "prettier --write . --cache --cache-strategy metadata --cache-location .cache/.prettiercache",
        "typecheck": "tsc -p tsconfig.json --noEmit"
    },
    "dependencies": {
        "@prettier/plugin-xml": "^3.4.2",
        "prettier": "^3.7.4",
        "prettier-plugin-curly": "^0.4.1",
        "prettier-plugin-packagejson": "^2.5.20"
    },
    "devDependencies": {
        "@types/node": "^22.18.0",
        "typescript": "^5.9.2"
    },
    "engines": {
        "node": ">= 22.18.0"
    }
}
