{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "@krudi/prettier-config",
    "description": "Reusable Prettier configuration to enforce consistent formatting across projects.",
    "license": "MIT",
    "version": "0.1.6",
    "author": {
        "name": "krudi",
        "email": "patryk.kudlik@gmail.com",
        "url": "https://github.com/krudi"
    },
    "private": false,
    "homepage": "https://github.com/krudi/prettier-config/core#readme",
    "bugs": {
        "url": "https://github.com/krudi/prettier-config/core/issues"
    },
    "keywords": [
        "utils",
        "helpers",
        "validation",
        "zod",
        "types",
        "shared",
        "functions"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/krudi/shared-configs.git"
    },
    "engines": {
        "node": ">= 22.18.0"
    },
    "type": "module",
    "sideEffects": false,
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs",
            "types": "./dist/index.d.ts"
        },
        "./base": {
            "import": "./dist/base.js",
            "require": "./dist/base.cjs",
            "types": "./dist/base.d.ts"
        }
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsc -b tsconfig.build.json",
        "dev": "tsc -p tsconfig.json --watch",
        "typecheck": "tsc -p tsconfig.json --noEmit"
    },
    "dependencies": {
        "prettier": "^3.6.2"
    },
    "devDependencies": {
        "@types/node": "^22.18.0",
        "typescript": "^5.9.2"
    }
}
